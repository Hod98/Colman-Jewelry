    <!-- עדכון מוצר -->

    <div class="container-xl" id="add">
        <form action="/updateproducts/<%= items['name'] %>" method="POST">
            <h1>Update <%= items["name"] %>
            </h1>
            <form action="/updateproducts" method="POST">
                <div class="row">
                    <label class="col-sm-3" for="productName">Product Name:</label>
                    <input class="col-sm-3" type="text" id="productName" name="name of product" required><br><br>
                </div>
                <div class="row">
                    <label class="col-sm-3" for="brand">Brand:</label>
                    <input class="col-sm-3" type="text" id="brand" name="brand" required><br><br>
                </div>
                <div class="row">
                    <label class="col-sm-3" for="price">Price:</label>
                    <input class="col-sm-3" type="number" id="price" name="price" value="<%= items.price %>"
                        required><br><br>
                </div>
                <div class="row">
                    <label class="col-sm-3" for="picture">Picture:</label>

                    <img class="col-sm-3" id="productImage" style="width: 50px;height: 100px;"
                        src="<%= items.image %>" alt="Product Image">

                </div>
                <div class="row">
                    <label class="col-sm-3" for="pictureLink">Image Link:</label>
                    <input class="col-sm-5" type="text" id="pictureLink" name="pictureLink"
                        value="<%= items.image %>" required>
                    <button class="btn btn-primary" type="button" onclick="updateImage()">Change Image</button><br><br>
                </div>
                <div class="row">
                    <label class="col-sm-3" for="description">Description:</label>
                    <textarea class="col-sm-5" id="description" name="description" style="width: 600px;height: 200px;"
                        required><%= product.description %></textarea><br><br>
                </div>
                <div class="row">
                    <label class="col-sm-3" for="quantity">Quantity:</label>
                    <input class="col-sm-3" type="number" id="quantity" name="quantity" required><br><br>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <button class="btn btn-primary" id="update" type="submit">Update product</button>
                        <!-- <input type="submit" value="Add Product"> -->
                    </div>
                </div>
            </form>

            <script>
                function updateImage() {
                    const imageLink = document.getElementById("pictureLink").value;
                    const productImage = document.getElementById("productImage");
                    productImage.src = imageLink;
                }
            </script>
    </div>

    <!-- פוטר -->

    <script> const UpdateProducts = require('../routes/update');
        //Activate Route for Update page
        app.use('/updateproducts', UpdateProducts);</script>
